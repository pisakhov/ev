---
layout: "base.njk"
---
<style>
    section a {
        color: #7C3AED; /* Color value for violet-600 from the Tailwind CSS color palette */
    }
</style>

<header class="flex justify-center w-full">
{% include "nav.njk" %}
</header>

<section class="z-0 relative mx-1 md:mx-[8rem]">

<h1 class="text-lg md:text-xl lg:text-2xl text-[color:var(--c-1)] font-medium leading-tight tracking-tight mb-8"><i class="{{icon}} mr-2"></i>{{title}}
<div class="my-2 inset-0 w-full h-[2px] bg-gradient-to-r from-[color:var(--c-1)] via-[color:var(--c-1)] to-transparent rounded-full"></div></h1>
<div class="grid grid-cols-1 mb-8">        
    <div class="backdrop-blur-sm bg-[color:var(--c-2)] rounded-lg shadow-lg flex flex-col items-center justify-center relative text-md md:text-lg">
        <div class="gap-x-4 flex flex-col relative w-full">
        {{content | safe}}
        </div>
    </div>		
</div>
</section>

