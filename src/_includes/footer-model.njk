      <script>

$(document).ready(function() {
  var nav = $('nav');
  var navLinks = $('.zebra-1');
  var navLogo = $('.zebra-2');
  var navHamIcon = $('.zebra-3');

  function updateNavColors() {
    var scroll = $(window).scrollTop() + nav.outerHeight();
    var sections = $('.dark-section, .light-section');
    var currentSection = null;

    sections.each(function() {
      if (scroll >= $(this).offset().top) {
        currentSection = $(this);
      } else {
        return false; // Break out of the loop when the current section is found
      }
    });

    if (currentSection && currentSection.hasClass('light-section')) {
      navLinks.removeClass('text-gray-100').addClass('text-gray-600');
      navLogo.removeClass('text-violet-300').addClass('text-violet-600');
      navHamIcon.removeClass('text-violet-100').addClass('text-violet-600');
    } else {
      navLinks.removeClass('text-gray-600').addClass('text-gray-100');
      navLogo.removeClass('text-violet-600').addClass('text-violet-300');
      navHamIcon.removeClass('text-violet-600').addClass('text-violet-100');
    }
  }

  $(window).on('scroll', updateNavColors);
  updateNavColors(); // Call it once on page load to set the initial colors
});




         $(document).ready(function() {
           function animateNumbers(element, targetValue) {
         	let currentValue = 0;
         	let interval = setInterval(function() {
         	  if (currentValue >= targetValue) {
         		clearInterval(interval);
         		return;
         	  }
         	  currentValue += Math.ceil(targetValue / 100);
         	  element.text(currentValue.toLocaleString());
         	}, 20);
           }
          
           const $numberElements = $("[data-count]");
           $numberElements.waypoint(
         	function() {
         	  const $element = $(this.element);
         	  const targetValue = parseInt($element.attr("data-count"), 10);
         	  animateNumbers($element, targetValue);
         	  this.destroy();
         	},
         	{
         	  offset: "90%",
         	}
           );
         });
          
      </script>
      <script>
         $(document).ready(function () {
           const courseLinks = $('.course-link');
           const subcourseLists = $('.subcourse-list');
          
           // Set the first course to active and apply the text-violet-900 class
           //courseLinks.eq(0).removeClass('text-white').addClass('active text-violet-900');
          
           courseLinks.on('click', function (e) {
         	e.preventDefault();
          
         	// Remove active class from all course links
         	courseLinks.removeClass('active text-violet-900').addClass('text-white');
          
         	// Add active class and text-violet-900 class to the clicked course link
         	$(this).addClass('active text-violet-900').removeClass('text-white');
          
         	// Hide all subcourse lists
         	subcourseLists.addClass('hidden');
          
         	// Show the subcourse list for the clicked course
         	const courseId = $(this).data('course');
         	const subcourseList = $(`.subcourse-list[data-course="${courseId}"]`);
         	subcourseList.removeClass('hidden');
           });
         });
          
      </script>
