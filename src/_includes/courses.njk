{% include "nav.njk" %}


<!-- Catalog Courses -->

    <section class="light-section bg-gray-100 py-20 px-4 lg:px-8">
       <h1 class="text-2xl md:text-3xl lg:text-4xl text-violet-900 font-semibold mb-10 text-center" id="courses">Courses</h1>
       <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">



          {% for cls in collections.index %}

        <div class="group bg-white shadow-lg rounded-lg hover:shadow-violet-500/50 transition-shadow duration-300 flex flex-col">
             <div class="p-6">
                <h2 class="bg-clip-text text-transparent bg-gradient-to-t from-violet-900 to-violet-300 text-xl md:text-2xl lg:text-2xl font-semibold mb-4 text-center">{{ cls.data.title }}</h2>
             </div>
             <a href="{{ cls.url }}" class="text-lg bg-violet-900 text-white py-3 px-6 text-center rounded-b-lg border-t-2 border-violet-300 group-hover:bg-violet-600 transition duration-300 ease-in-out flex-1 flex items-center justify-center">Learn more</a>
          </div>

          {% endfor %}


    </div>
    </section>